<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
       android:paddingBottom="0dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
     >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="@color/background"
        android:baselineAligned="false" 
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
       
        >

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="clinicDetails" >

            <TextView
                android:id="@+id/clinicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text" />

            

            <TextView
                android:id="@+id/clinicaddress"
                android:layout_width="match_parent"
                android:layout_height="80dp"
              android:layout_marginLeft="2dp"
                android:textAppearance="?android:attr/textAppearanceSmall" 
                android:textColor="@color/text"
                 />
            <TextView
                android:id="@+id/noofdocs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"              
                android:textAppearance="?android:attr/textAppearanceSmall" 
                android:textColor="@color/text"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray"
                 />
          
                
               
            

             <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:baselineAligned="false"
         >

   <LinearLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20" >

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
				android:onClick="call"
                android:src="@drawable/phone2"
                android:scaleType="fitCenter"
                android:contentDescription="Call button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20" >

            <Button
                android:id="@+id/imageButton4"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
              
                android:text="Make Appointment"
                android:onClick="makeAppointment" 
                android:contentDescription="MakeAppointment button"/>

        </LinearLayout>
        </LinearLayout>

</LinearLayout>
     

    </LinearLayout>

</LinearLayout>
