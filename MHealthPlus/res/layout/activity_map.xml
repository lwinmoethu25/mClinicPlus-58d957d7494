<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lucentinsight.mclinicplus.activity.MapActivity" >

    <fragment
        android:id="@+id/fragment1"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/background"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="clinicDetails" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              
                android:textAppearance="?android:attr/textAppearanceSmall" 
                android:textColor="@color/text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
				android:onClick="call"
				android:scaleType="fitCenter"
                android:src="@drawable/phone2"
                android:contentDescription="Call button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20" >

            <Button
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Appointment"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:scaleType="fitCenter"
                android:onClick="makeAppointment" 
                android:contentDescription="MakeAppointment button"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>