<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lucentinsight.mclinicplus.activity.ClinicDetailActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@android:color/white"
    >

    <TextView android:text="Title"
        android:id="@+id/name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        />

    <TextView android:text="@string/address"
        android:textColor="@android:color/white"
        android:textSize="@dimen/big_text"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_horizontal"
        />
    <TextView android:text="19, Street xxx, Yangon"
        android:id="@+id/address"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text"
        android:background="@color/background_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="left"
        />

    <LinearLayout
        android:id="@+id/makeappointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="@color/background_gray"
        >
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/phone2"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/darkgray"
            />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="952183243204"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        />
    <ImageView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitStart"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />


</LinearLayout>
